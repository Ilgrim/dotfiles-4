exec --no-startup-id kupfer
# Chat with friends
exec --no-startup-id /opt/Telegram/Telegram
# Connect with coworkers
exec --no-startup-id slack
# Git browser
exec --no-startup-id git-cola
# File browser
exec --no-startup-id qterminal -e ranger
# Clipboard history
exec --no-startup-id parcellite
# Bluetooth applet
exec --no-startup-id blueman-applet
# Auto lock and suspend
exec_always --no-startup-id xautolock -time 5 -locker "/home/clayton/.i3/i3exit lock" -killtime 10 -killer "/home/clayton/.i3/i3exit suspend"
